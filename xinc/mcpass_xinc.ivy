#lang ivy1.7

attribute method = mc
# attribute method = bmc[3]

type t
interpret t -> bv[4]

object test = {

  individual x : t

  after init {
    x := 0;
  } 

  action transition = {
    if (x ~= 4) {
      x := x + 1;
    }
    else {
      x := x + 2;
    }
  }
  
  export transition
  
  invariant x ~= 5
  
}

